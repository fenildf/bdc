<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a00.bdcapp.MineActivity">


    <com.example.a00.fragment1.CircleImageView
        android:id="@+id/user_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/user_name_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_picture"
        android:gravity="center_horizontal"
        android:text="昵称"
        android:textSize="20sp" />


    <Button
        android:id="@+id/user_revise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text="基本信息"
        android:layout_below="@+id/user_name_show"/>

    <Button
        android:id="@+id/user_wordlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_revise"
        android:background="#00000000"
        android:text="单词本" />

    <Button
        android:id="@+id/user_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_setting"
        android:background="#00000000"
        android:text="退出登录" />

    <Button
        android:id="@+id/user_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_collect"
        android:background="#00000000"
        android:text="复习设置" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的收藏"
        android:id="@+id/user_collect"
        android:layout_below="@+id/user_wordlist"
        android:background="#00000000"/>
</RelativeLayout>
