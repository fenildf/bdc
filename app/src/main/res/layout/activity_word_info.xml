<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a00.fragment1.WordInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/meaning_layout">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:id="@+id/word"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:id="@+id/pro_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageButton
                    android:id="@+id/pro_uk_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_pro"/>
                <TextView
                    android:id="@+id/ph_uk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="英式"/>
                <ImageButton
                    android:id="@+id/pro_usa_icon"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_pro"/>
                <TextView
                    android:id="@+id/ph_usa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="美式"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mean"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_line"
                android:showDividers="beginning">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基本释义"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:id="@+id/meaning"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/meaningshow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sentence"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_word"
            android:divider="@drawable/divider_line"
            android:showDividers="beginning"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="例句"
                android:textColor="#000000"
                android:id="@+id/eg"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sentence_text_view"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relatedwords"
                android:text="派生词"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/rwshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
