<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!--填充颜色-->
    <solid android:color="#53C7F0"/>

    <!--边框的颜色-->
    <stroke
        android:width="1dp"
        android:color="#ffffff"/>

    <!--弧形的半径-->
    <corners
        android:radius="20dp"/>

    <!--文字与每一条边的间距-->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />
</shape>