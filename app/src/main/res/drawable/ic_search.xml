<?xml version="1.0" encoding="utf-8"?>
<!--首页矩形圆角搜索框-->
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

    <!--填充的颜色，背景设置成半透明-->
    <solid android:color="#20000000"/>

    <!--边框的颜色-->
    <stroke
        android:width="1dp"
        android:color="#ffffff"/>

    <!--弧形的半径-->
    <corners
        android:radius="20dp"/>

    <!--文字与每一条边的间距-->
    <padding
        android:bottom="5dp"
        android:left="100dp"
        android:right="100dp"
        android:top="5dp" />
</shape>